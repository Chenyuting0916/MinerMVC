<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TimeMiner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/happy.ico">
</head>
<body data-theme="dark">
    <div class="app-container">
        <div class="activity-bar">
            <div class="top-actions">
                <a asp-controller="Home" asp-action="Index" class="activity-bar-icon" title="Home">
                    <i class='bx bx-home'></i>
                </a>
                <a asp-controller="CustomExcel" asp-action="Index" class="activity-bar-icon" title="Custom Excel">
                    <i class='bx bx-table'></i>
                </a>
                <a asp-controller="Timer" asp-action="Index" class="activity-bar-icon" title="Timer">
                    <i class='bx bx-time'></i>
                </a>
                <a href="https://www.buymeacoffee.com/timeminer" target="_blank" class="activity-bar-icon" title="Donate">
                    <i class='bx bx-donate-heart'></i>
                </a>
            </div>
            <div class="bottom-actions">
                <button class="activity-bar-icon" id="themeToggle" title="Toggle Theme">
                    <i class='bx bx-moon'></i>
                </button>
            </div>
        </div>
        <main class="content-area">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>