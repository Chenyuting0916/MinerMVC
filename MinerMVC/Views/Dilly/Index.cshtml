@{
    ViewData["Title"] = "Dilly Helper";
}

<h2 style="margin-top: 15px"> Dilly 計算機 </h2>
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" >版位</span>
    </div>
    <input type="number" class="form-control" id="版位" aria-describedby="basic-addon3" value="1">
</div>
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" >語系</span>
    </div>
    <input type="number" class="form-control" id="語系" aria-describedby="basic-addon3" value="1">
</div>
<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" >LOGO+QRcode數量</span>
    </div>
    <input type="number" class="form-control" id="LOGO數量" aria-describedby="basic-addon3" value="1"> 
</div>

<h2 id="info"></h2>
<div id="resizeSum"></div>
<div id="LanSum"></div>
<div id="LogoSum"></div>


@* <a target="_blank" href="https://www.buymeacoffee.com/tim3767550h">給我錢，謝謝</a> *@


<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script type="text/javascript">


$( "#sum" ).html("<h2>1</h2>");

$( ".form-control" ).change(function() {
  const bannerSize = $( "#版位" ).val(); 
  const language = $( "#語系" ).val();
  
  $("#info").html("假設已有一張英文+logo的banner:");
  
  $( "#resizeSum" ).html(
      "<h2>"+
        "Resize要做幾張: " + (bannerSize - 1) +
      "</h2>");

  $( "#LanSum" ).html(
      "<h2>"+
        "多語系要做幾張: " + bannerSize * (language - 1) +
      "</h2>");
  
  $( "#LogoSum" ).html(
        "<h2>"+
          "Logo+Qrcode要改幾張: " + (bannerSize * language * $( "#LOGO數量" ).val() - 1) +
        "</h2>");
});

</script>