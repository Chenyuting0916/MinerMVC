@{
    ViewData["Title"] = "Custom Excel";
}

<link rel="stylesheet" href="~/css/custom-excel.css" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/custom-excel.js"></script>

@model List<MinerMVC.ViewModel.CustomExcelViewModel>

<div class="excel-header">
    <h1 class="excel-title">Custom Excel</h1>
    <div class="excel-actions">
        <button type="button" class="excel-button" data-bs-toggle="modal" data-bs-target="#insertModal">
            <i class='bx bx-plus'></i>
            New
        </button>
        <button type="button" class="excel-button">
            <i class='bx bx-refresh'></i>
            Refresh
        </button>
    </div>
</div>

<div class="table-responsive">
    <table class="excel-table">
        <thead>
            <tr>
                <th style="width: 60px">No.</th>
                <th>Name</th>
                <th>Description</th>
                <th style="width: 100px; text-align: center;">Image</th>
                <th style="width: 80px; text-align: center;">Verified</th>
                <th style="width: 120px; text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customExcel in Model.Select((value, index) => new { value, index }))
            {
                <tr>
                    <td hidden id="@customExcel.value.Id">@customExcel.value.Id</td>
                    <td class="align-middle">@(customExcel.index + 1)</td>
                    <td class="align-middle" name="@customExcel.value.Name">@customExcel.value.Name</td>
                    <td class="align-middle" description="@customExcel.value.Description">@customExcel.value.Description</td>
                    <td class="text-center">
                        <img class="image-thumbnail" src="~/Contents/@customExcel.value.ImageName" alt="Uploaded Image">
                    </td>
                    <td class="text-center align-middle">
                        <div class="checkbox-wrapper">
                            <input class="excel-checkbox" type="checkbox" checked="@customExcel.value.Verified">
                        </div>
                    </td>
                    <td class="text-center align-middle">
                        <div class="action-buttons">
                            <button type="button" class="btn btn-sm btn-primary edit me-1">Edit</button>
                            <button type="button" class="btn btn-sm btn-danger delete">Delete</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Insert Modal -->
<div class="modal fade custom-modal" id="insertModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Excel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Insert" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" name="Name" required>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="Description" rows="3" required></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Image</label>
                        <input type="file" class="form-control" id="insertImage" name="Image" accept="image/*" required>
                        <img id="insertImagePreview" src="#" alt="Preview" class="img-preview mt-2">
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="insertVerified" name="Verified" value="true">
                        <label class="form-check-label" for="insertVerified">Verified</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade custom-modal" id="EditModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Excel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" id="editId" name="Id">
                    <input type="hidden" id="editImageName" name="ImageName">
                    <div class="form-group mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" id="editName" name="Name" required>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" id="editDescription" name="Description" rows="3" required></textarea>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Image</label>
                        <input type="file" class="form-control" id="editImage" name="Image" accept="image/*">
                        <img id="editImagePreview" src="#" alt="Preview" class="img-preview mt-2">
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="editVerified" name="Verified" value="true">
                        <label class="form-check-label" for="editVerified">Verified</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade custom-modal" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Delete" method="post">
                <div class="modal-body">
                    <input type="hidden" id="customExcelId" name="Id">
                    <p>Are you sure you want to delete this item?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Image Preview Modal -->
<div class="modal fade custom-modal" id="imageModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Image Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" alt="Full size image" style="max-width: 100%;">
            </div>
        </div>
    </div>
</div>